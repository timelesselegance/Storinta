@{
    ViewData["Title"] = "Welcome";
}

<section class="features py-5">
    <div class="container">
        <div class="row g-4 align-items-stretch">
            <!-- Left (Small) -->
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="mb-3">
                        <span class="badge rounded-pill bg-success">Well-being</span>
                    </div>
                    <h4 class="fw-semibold">Daily Facts</h4>
                    <p class="text-muted">Curated, evidence-based facts about how your body works.</p>
                </div>
            </div>

    <!-- Center (Large) -->
<div class="col-md-6 d-flex align-items-stretch">
    <div class="position-relative w-100 shadow-sm overflow-hidden" style="border-radius: 30px;">
        <img src="/assets/img/expressive-senior-woman-posing.jpg"
             alt="Smiling Woman"
             class="img-fluid w-100"
             style="height: 100%; max-height: 500px; object-fit: cover;" />

        <!-- Glass Card -->
        <div class="position-absolute top-0 end-0 m-3 p-3 glass-card text-start">
            <i class="bi bi-box-arrow-up-right position-absolute top-0 end-0 m-2 fs-5" style="opacity: 0.7;"></i>
            <h4 class="fw-bold mb-1">24k</h4>
            <p class="mb-0 small">Women empowered through our magazines</p>
        </div>

        <!-- Triangle Dots -->
        <div class="position-absolute w-100 h-100">
            <span class="position-absolute start-0 bottom-0 m-3 dot-triangle"></span>
            <span class="position-absolute end-0 bottom-0 m-3 dot-triangle"></span>
            <span class="position-absolute top-0 start-50 translate-middle-x mt-3 dot-triangle"></span>
        </div>
    </div>
</div>

            <!-- Right (Small) -->
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="mb-3">
                        <span class="badge rounded-pill bg-warning text-dark">Movement</span>
                    </div>
                    <h4 class="fw-semibold">Physical Insights</h4>
                    <p class="text-muted">From posture to biomechanics, learn what your body says.</p>
                </div>
            </div>
        </div>
    </div>
</section>
