@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IntraHuman</title>

    <!-- Fonts & Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <!-- Bootstrap & site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white border-bottom shadow-sm">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/img/intrahuman-logo.png" alt="IntraHuman Logo" width="36" height="36"
                        class="me-2" />
                </a>

                <!-- Main menu -->
                <div class="mx-auto">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex flex-row gap-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="nav-link">
                                    User&nbsp;Management
                                </a>
                            </li>
                        }
                        @* Editor ve Admin için Yeni Yazı linki *@
                        @if (User.IsInRole("Editor") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Blog" asp-action="Create">Yeni Yazı</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Login / Logout (via _LoginPartial) -->
                <div class="d-flex align-items-center gap-2">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <small>&copy; 2025 IntraHuman. All rights reserved.</small>
        </div>
    </footer>

    <!-- Bootstrap scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
