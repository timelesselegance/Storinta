@model IEnumerable<HumanBodyWeb.Areas.Admin.Controllers.UserRolesViewModel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info mb-0">
                    Henüz kayıtlı kullanıcı bulunmuyor.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Email</th>
                                <th scope="col">Roller</th>
                                <th scope="col" class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="EditRoles"
                                            asp-route-userId="@user.UserId" class="text-decoration-none">
                                            @user.Email
                                        </a>
                                    </td>
                                    <td>@string.Join(", ", user.Roles)</td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="EditRoles"
                                            asp-route-userId="@user.UserId" class="btn btn-sm btn-outline-primary">
                                            Düzenle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
